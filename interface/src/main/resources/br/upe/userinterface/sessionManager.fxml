<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.upe.userinterface.SessionManagerController"
      prefHeight="400.0" prefWidth="600.0">
    <children>
        <!-- Sidebar Navigation -->
        <VBox prefWidth="200.0" style="-fx-background-color: #394159;">
            <children>
                <AnchorPane prefHeight="358.0">
                    <children>
                        <Hyperlink fx:id="homeAdminLink"
                                   layoutX="25.0" layoutY="25.0"
                                   onAction="#switchToHomeAdmin"
                                   text="Home" textFill="#f2f2f2"
                                   style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                        <Separator layoutY="74.0" prefHeight="3.0" prefWidth="250.0" style="-fx-background-color: F2F2F2;" />
                        <Hyperlink fx:id="manageEventLink"
                                   layoutX="25.0" layoutY="85.0"
                                   onAction="#switchToManageEvent"
                                   text="Manage Event" textFill="#f2f2f2"
                                   style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                        <Separator layoutY="130.0" prefHeight="3.0" prefWidth="250.0" style="-fx-background-color: F2F2F2;" />
                        <Hyperlink fx:id="newSessionLink"
                                   layoutX="25.0" layoutY="141.0"
                                   onAction="#switchToSessionRegister"
                                   text="New Session" textFill="#f2f2f2"
                                   style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                        <Hyperlink fx:id="listSessionLink"
                                   layoutX="25.0" layoutY="197.0"
                                   onAction="#switchToSessionList"
                                   text="List Sessions" textFill="#f2f2f2"
                                   style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                        <Hyperlink fx:id="logoutLink"
                                   layoutX="25.0" layoutY="253.0"
                                   onAction="#logout"
                                   text="Logout" textFill="#d9534f"
                                   style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                    </children>
                </AnchorPane>
            </children>
        </VBox>

        <!-- Main Content Area -->
        <VBox prefWidth="403.0" style="-fx-padding: 10; -fx-background-color: #ffffff;">
            <children>
                <Label text="Painel da Sessão"
                       alignment="CENTER"
                       prefHeight="50.0" prefWidth="350.0"
                       style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #394159;" />
                <Separator layoutY="60.0" prefHeight="3.0" prefWidth="350.0" style="-fx-background-color: #394159;" />
                <VBox alignment="TOP_CENTER" prefHeight="353.0" prefWidth="350.0" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-background-color: #f9f9f9;">
                            <children>
                                <!-- Labels Column -->
                                <VBox alignment="TOP_LEFT" prefWidth="163.0" spacing="10">
                                    <children>
                                        <Label text="Nome da Sessão" style="-fx-font-size: 14; -fx-text-fill: #555555;" />
                                        <Label text="Nome do Convidado" style="-fx-font-size: 14; -fx-text-fill: #555555;" />
                                        <Label text="Local" style="-fx-font-size: 14; -fx-text-fill: #555555;" />
                                        <Label text="Data de Início" style="-fx-font-size: 14; -fx-text-fill: #555555;" />
                                        <Label text="Data de Término" style="-fx-font-size: 14; -fx-text-fill: #555555;" />
                                        <Label text="Número de Inscritos" style="-fx-font-size: 14; -fx-text-fill: #555555;" />
                                        <Hyperlink fx:id="updateSessionLink"
                                                   onAction="#switchToSessionUpdater"
                                                   text="Update Session"
                                                   style="-fx-text-fill: #337ab7;" />
                                    </children>
                                </VBox>
                                <!-- Data Column -->
                                <VBox alignment="TOP_LEFT" prefWidth="200.0" spacing="10">
                                    <children>
                                        <Label fx:id="sessaoNome" text="-" style="-fx-font-size: 14; -fx-text-fill: #000000;" />
                                        <Label fx:id="sessionGuest" text="-" style="-fx-font-size: 14; -fx-text-fill: #000000;" />
                                        <Label fx:id="sessionLocal" text="-" style="-fx-font-size: 14; -fx-text-fill: #000000;" />
                                        <Label fx:id="dataInicio" text="Não Informado" style="-fx-font-size: 14; -fx-text-fill: #000000;" />
                                        <Label fx:id="dataFim" text="Não Informado" style="-fx-font-size: 14; -fx-text-fill: #000000;" />
                                        <Label fx:id="subscriptionCount" text="-" style="-fx-font-size: 14; -fx-text-fill: #000000;" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</HBox>
