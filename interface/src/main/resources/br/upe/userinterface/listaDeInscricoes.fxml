<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.upe.userinterface.ListaDeInscricoesController">

    <children>
        <!-- Sidebar -->
        <VBox prefHeight="400.0" prefWidth="200.0" style="-fx-background-color: #394159;">
            <children>
                <AnchorPane prefHeight="400.0" prefWidth="200.0">
                    <children>
                        <!-- Home Link -->
                        <Hyperlink fx:id="homeUser" layoutX="56.0" layoutY="39.0"
                                   onAction="#goToHomeUser" prefHeight="29.0" prefWidth="130.0"
                                   text="Home" style="-fx-text-fill: #FFFFFF; -fx-font-size: 14px;" />

                        <!-- Separator Below Home -->
                        <Separator layoutX="0.0" layoutY="69.0" prefWidth="200.0" opacity="0.74"
                                   style="-fx-background-color: #F2F2F2;">
                            <effect>
                                <ColorAdjust />
                            </effect>
                        </Separator>

                        <!-- Logout Link -->
                        <Hyperlink fx:id="logoutLink" layoutX="56.0" layoutY="254.0"
                                   onAction="#logout" prefHeight="29.0" prefWidth="130.0"
                                   text="Logout" style="-fx-text-fill: #FFFFFF; -fx-font-size: 14px;" />
                    </children>
                </AnchorPane>
            </children>
        </VBox>

        <!-- Main Content -->
        <VBox prefHeight="400.0" prefWidth="400.0"
              style="-fx-padding: 20; -fx-background-color: #FFFFFF;">
            <children>
                <!-- User Email Label -->
                <Label fx:id="userEmail" alignment="CENTER" prefHeight="30.0" prefWidth="400.0"
                       style="-fx-text-fill: #394159; -fx-font-size: 14px;" />

                <!-- ScrollPane for Content -->
                <ScrollPane fx:id="scrollPane" prefHeight="370.0" prefWidth="400.0"
                            style="-fx-background-color: #FFFFFF; -fx-padding: 10;">
                    <content>
                        <!-- Placeholder for dynamic content -->
                        <VBox spacing="10" alignment="TOP_LEFT" style="-fx-padding: 10;">
                            <!-- Add dynamic items here -->
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</HBox>
