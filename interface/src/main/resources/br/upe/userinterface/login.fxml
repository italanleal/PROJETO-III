<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #394159;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.userinterface.LoginController">
   <children>
      <Label text="Login page" textFill="WHITE">
         <VBox.margin>
            <Insets bottom="40.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Label>
      <VBox prefHeight="88.0" prefWidth="86.0">
         <children>
            <Label prefHeight="18.0" prefWidth="149.0" text="E-mail:" textFill="WHITE" />
            <TextField id="emailField" fx:id="emailField" promptText="type your email">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin></TextField>
            <Label prefHeight="18.0" prefWidth="102.0" text="Password:" textFill="WHITE" />
            <TextField id="passwordField" fx:id="passwordField" promptText="type your password">
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin></TextField>
            <Button id="loginButton" fx:id="loginButton" mnemonicParsing="false" onAction="#login" prefHeight="13.0" prefWidth="100.0" style="-fx-background-color: #62D7AD;" text="login" textFill="#38393d" />
         </children>
      </VBox>
      <Label id="warningLabel" fx:id="warningLabel" style="-fx-text-fill: red;" />
      <Hyperlink id="registerLink" fx:id="registerLink" onAction="#switchToRegister" text="register account" textFill="WHITE" underline="true" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
