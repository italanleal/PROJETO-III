<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #394159;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.userinterface.RegisterController">
    <children>
        <Label text="Register page" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="30.0" top="10.0" />
         </VBox.margin></Label>
          <VBox prefHeight="200.0" prefWidth="100.0">
             <children>
            <Label text="CPF" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font></Label>
                 <TextField id="cpfField" fx:id="cpfField">
                     <VBox.margin>
                         <Insets bottom="20.0" />
                     </VBox.margin></TextField>
                <Label prefHeight="18.0" prefWidth="101.0" text="E-mail:" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font></Label>
            <TextField fx:id="emailField" />
                <Label text="Password:" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font></Label>
                <TextField id="passwordField" fx:id="passwordField">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin></TextField>
            <Label text="Nome" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font></Label>
            <TextField fx:id="nameField" />
            <Label text="Sobrenome" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font></Label>
                 <TextField id="cpfField" fx:id="surnameField">
                     <VBox.margin>
                         <Insets bottom="20.0" />
                     </VBox.margin></TextField>
                <CheckBox id="adminStatus" fx:id="adminStatus" mnemonicParsing="false" text="Admin Account" textFill="WHITE">
               <font>
                  <Font size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin></CheckBox>
                 <HBox alignment="CENTER">
                    <Button id="registerButton" fx:id="registerButton" mnemonicParsing="false" onAction="#register" prefHeight="26.0" prefWidth="102.0" style="-fx-background-color: #62D7AD; -fx-border-radius: 30.0; -fx-background-radius: 30.0;" text="Register">
                        <font>
                            <Font name="System Bold" size="15.0" />
                        </font></Button>
                 </HBox>
             </children>
          </VBox>
        <Label id="warningLabel" fx:id="warningLabel" style="-fx-text-fill: red;" />
        <Hyperlink id="registerLink" fx:id="loginLink" onAction="#switchToLogin" text="Login" textFill="WHITE" underline="true">
         <font>
            <Font size="15.0" />
         </font></Hyperlink>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
